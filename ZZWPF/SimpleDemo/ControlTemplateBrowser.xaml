<Window x:Class="SimpleDemo.ControlTemplateBrowser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ControlTemplateBrowser" Height="500" Width="700">
    <Grid Name="RootGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <ListBox Name="ControlsListBox" Grid.Column="0" SelectionChanged="ControlsListBox_OnSelectionChanged"/>
        <RichTextBox Name="ControlTemplateRichTextBox" Grid.Column="1"/>
    </Grid>
</Window>
